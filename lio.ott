defns
  Jtype :: '' ::= 

defn
    G |- t : T :: :: GtT :: GtT_ by

    ---------------- :: true
    G |- true : Bool

    ----------------- :: false
    G |- false : Bool

    ------------ :: unit
    G |- () : ()

		---------------- :: labelBot
		G |- bot : Label

		---------------- :: labelA
		G |- A : Label

		---------------- :: labelB
		G |- B : Label

		---------------- :: labelTop
		G |- top : Label
 
	  G |- t : T
		------------------ :: lio
		G |- LIO t : LIO T
        
    x : T inT G
    ----------- :: valName
    G |- x : T

    G , x : T1  |- t : T2
    -------------------- :: abs
    G |- \x.t : T1 -> T2

    G |- t : T -> T
    --------------- :: fix
    G |- fix t : T

    G |- t  : T1 -> T2
    G |- t1 : T1 
    -------------- :: app
    G |- t t1 : T2

    G |- t1 : Bool
    G |- t2 : T
    G |- t3 : T
    ------------------------------ :: ifEl
    G |- if t1 then t2 else t3 : T


		G |- t2 : Label
		----------------------- :: join
		G |- join t1 t2 : Label

		G |- t1 : Label
		G |- t2 : Label
		----------------------- :: meet
		G |- meet t1 t2 : Label

		G |- t1 : Label
		G |- t2 : Label
		--------------------------- :: canFlowTo
		G |- canFlowTo t1 t2 : Bool

    G |- t : T
    --------------------- :: return

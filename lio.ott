defns
  Jop :: '' ::=

    defn
    t1 ~> t2 ::  :: pure_reduce :: Pr_       {{ com [[t1]] reduces to [[t2]] }} by 

    t1 ~> t1'
    --------------- :: appCtx
    t1 t2 ~> t1' t2

    -----------------------  :: app
    (\x.t1) t2 ~>  {t2/x}t1

    ------------------ :: fix
    fix t ~> t (fix t)

    t1 ~> t1'
    -----------------------------------------------  :: ifCtx
    if t1 then t2 else t3 ~> if t1' then t2 else t3

    -----------------------------  :: ifTrue
    if true then t2 else t3 ~> t2

    ------------------------------  :: ifFalse
    if false then t2 else t3 ~> t3

		t1 ~> t1'
		------------------------- :: joinCtxL
		join t1 t2 ~> join t1' t2

		t2 ~> t2'
		------------------------- :: joinCtxR
		join v1 t2 ~> join v1 t2'

		not (v = bot)
		--------------- :: joinBotL
		join bot v ~> v

		not (v = bot)
		--------------- :: joinBotR
		join v bot ~> v

		v1 = v2
		---------------- :: joinEq
		join v1 v2 ~> v1

		--------------- :: joinAB
		join A B ~> top

		--------------- :: joinBA
		join B A ~> top

		not (v = top)
		----------------- :: joinTopL
		join top v ~> top

		not (v = top)
		----------------- :: joinTopR
		join v top ~> top

		t1 ~> t1'
		------------------------- :: meetCtxL
		meet t1 t2 ~> meet t1' t2

		t2 ~> t2'
		------------------------- :: meetCtxR
		meet v1 t2 ~> meet v1 t2'

		not (v = bot)
		----------------- :: meetBotL
		meet bot v ~> bot

		not (v = bot)
		----------------- :: meetBotR
		meet v bot ~> bot

		v1 = v2
		---------------- :: meetEq
		meet v1 v2 ~> v1

		--------------- :: meetAB
		meet A B ~> bot

		--------------- :: meetBA
		meet B A ~> bot

		not (v = top)
		--------------- :: meetTopL
		meet top v ~> v

		not (v = top)
		--------------- :: meetTopR
		meet v top ~> v

		t1 ~> t1'
		----------------------------------- :: canFlowToCtxL
		canFlowTo t1 t2 ~> canFlowTo t1' t2

		t2 ~> t2'
		----------------------------------- :: canFlowToCtxR
		canFlowTo v1 t2 ~> canFlowTo v1 t2'

		not (v = bot)
		----------------------- :: canFlowToBot
		canFlowTo bot v ~> true

		v1 = v2
		----------------------- :: canFlowToEq
		canFlowTo v1 v2 ~> true

		---------------------- :: canFlowToAB
		canFlowTo A B ~> false

		---------------------- :: canFlowToBA
		canFlowTo B A ~> false

		not (v = top)
		----------------------- :: canFlowToTop
		canFlowTo v top ~> true

    defn
    m1 --> m2 ::  :: monad_reduce :: Mo_       {{ com [[m1]] reduces to [[m2]] }} by 

    ------------------------------------ :: return
    conf l c return t --> conf l c LIO t

    conf l c t1 --> conf l' c' t1'
    ---------------------------------------------- :: bindCtx
    conf l c bind t1 t2 --> conf l' c' bind t1' t2

    ----------------------------------------------------  :: bind
    conf l c bind LIO t1 t2 --> conf l c t2 t1

